{
  "name": "@stack/api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "nest": "DOTENV_CONFIG_PATH=../.env node -r dotenv/config $(yarn bin nest)",
    "prisma": "DOTENV_CONFIG_PATH=../.env node -r dotenv/config $(yarn bin prisma)",
    "jest": "DOTENV_CONFIG_PATH=../.env node -r dotenv/config $(yarn bin jest)",
    "prebuild": "rimraf dist",
    "build": "yarn nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "yarn nest start --watch",
    "dev:debug": "yarn nest start --debug --watch",
    "start": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "test:cov": "yarn jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn jest --config ./jest-e2e.config.js",
    "upd": "docker-compose --env-file ../.env up -d",
    "stop": "docker-compose --env-file ../.env stop",
    "restart": "docker-compose --env-file ../.env restart",
    "down": "docker-compose --env-file ../.env down",
    "wipe": "yarn down && yarn delete-volume",
    "delete-volume": "docker volume rm backend_db_data || true",
    "insert": "DOTENV_CONFIG_PATH=../.env ts-node -r dotenv/config ./script.ts",
    "codegen": "yarn prisma generate && yarn codegen:format",
    "codegen:format": "prettier --write \"./src/generated/**/*.ts\"",
    "codegen:prisma-nestjs": "DOTENV_CONFIG_PATH=../.env ts-node -r dotenv/config ./generator/prisma-nestjs-resource/index.ts && yarn codegen:format",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@casl/prisma": "^1.0.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-fastify": "^8.2.4",
    "@nestjs/swagger": "^5.1.5",
    "@prisma/client": "3.6.0",
    "fastify-cors": "^6.0.2",
    "fastify-swagger": "^4.13.0",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.6",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vegardit/prisma-generator-nestjs-dto": "^1.4.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "prisma": "^3.6.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
